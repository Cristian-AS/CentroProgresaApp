<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppCentroProgresaNight" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Text Colors Night-->
        <item name="android:textColor">@android:color/white</item>

        <!-- Boton Colors Night-->
        <item name="colorPrimary">@color/yellowAplicattion</item>

        <!-- Fondo de App Night-->
        <item name="colorOnPrimary">#545350</item>

        <!-- Status bar color Night -->
        <item name="android:statusBarColor" >@color/letterBox</item>
    </style>

    <!-- Text Colors Especificamente "txtInfo" -->
    <style name="TextViewtxtInfo">
        <item name="android:textColor">@color/textBox</item>
    </style>

    <!-- Estilo personalizado para el LinearLayout en modo oscuro -->
    <style name="LinearLayoutNightStyle">
        <item name="android:background">@drawable/ic_background_gray</item>
    </style>

    <!--Botón de color para la barra de navegación - modo obscuro-->
    <style name="BottomNavigation">
        <item name="android:background">@color/greyDark</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <!--Botón de color para la el rectangulo de perfil - modo obscuro-->
    <style name="backgroundPerfil">
        <item name="android:background">@drawable/ic_botton_rectangule_grey</item>
    </style>
</resources>