<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <!--    Barra de navegaciÃ³n-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        app:menu="@menu/bottom_navigation"
        app:labelVisibilityMode="labeled"
        style="@style/BottomNavigation"/>

    <!--    Es todo el linear layout de la interfaz-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitleNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/inter_variablefont_slnt_wght"
            android:gravity="center"
            android:hint="@string/txtTitleNotification"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rectangle"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/textViewInfoNotification"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_variablefont_slnt_wght"
                android:gravity="left|center_horizontal"
                android:hint="@string/txtInfoNotification"
                android:paddingStart="10dp"
                android:textColor="@color/letterBox"
                android:textColorHint="@color/letterBox"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="177dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/textViewInfoNotification"
                android:paddingStart="0dp"
                android:src="@drawable/alerta" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>